{
	"server": {
		"port": 5050,
		"max_clients": 32,
		"bind_address": "0.0.0.0"
	},
	"database": {
		"type": "sqlite",
		"path": "server_data/game_database.db",
		"backup": {
			"enabled": true,
			"interval_hours": 6,
			"max_backups": 10
		},
		"performance": {
			"cache_size_kb": 10000,
			"journal_mode": "WAL"
		}
	},
	"authentication": {
		"session_timeout_seconds": 3600,
		"max_login_attempts": 5
	}
}


